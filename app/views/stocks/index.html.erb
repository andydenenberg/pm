<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Portfolio</th>
      <th>Title</th>
      <th>Body</th>
      <th>Purchase price</th>
      <th>Quantity</th>
      <th>Symbol</th>
      <th>Name</th>
      <th>Portfolio</th>
      <th>Purchase date</th>
      <th>Strike</th>
      <th>Expiration date</th>
      <th>Stock option</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.portfolio %></td>
        <td><%= stock.title %></td>
        <td><%= stock.body %></td>
        <td><%= stock.purchase_price %></td>
        <td><%= stock.quantity %></td>
        <td><%= stock.symbol %></td>
        <td><%= stock.name %></td>
        <td><%= stock.portfolio_id %></td>
        <td><%= stock.purchase_date %></td>
        <td><%= stock.strike %></td>
        <td><%= stock.expiration_date %></td>
        <td><%= stock.stock_option %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

