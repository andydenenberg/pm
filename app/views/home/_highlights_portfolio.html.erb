<!-- Modal Header -->
<div class="modal-header">
  <h4 class="modal-title"><%= @stocks.count %> positions held in <%= @portfolio.name %></h4>
  <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<div class="modal-body">
	<table class="table table-bordered table-striped table-sm">
	  <thead>
		<tr>
			<th>Symbol</th>
			<th class='text-right'>Quantity</th>
			<th class='text-right'>Value</th>
			<th class='text-right'>Change</th>
		</tr>
		</thead>
		<tbody>
		<% @stocks.each do |s| %>
		<tr>
			<td><%= s.symbol %></td>
			<td class='text-right'><%= number_with_precision( s.quantity, precision: 0, delimiter: ',' ) %></td>
			<td class='text-right'><%= number_to_currency( s.quantity * s.price, precision: 0 ) %></td>
			<td class='text-right'><%= number_to_currency( s.quantity * s.change, precision: 0 ) %></td>
		</tr>
		<% end %>
		<% @options.each do |s| %>
		<tr>
			<td><%= s.symbol %> (<%= s.strike %> <%= s.expiration_date %>)</td>
			<td class='text-right'><%= number_with_precision( s.quantity, precision: 0, delimiter: ',' ) %></td>
			<td class='text-right'><%= number_to_currency( s.quantity * s.price * 100, precision: 0 ) %></td>
			<td class='text-right'><%= number_to_currency( s.quantity * s.change * 100, precision: 0 ) %></td>
		</tr>
		<% end %>
		<tr>
			<td colspan=2 class='text-right'></td>
			<td class='text-right'><%= number_to_currency( @portfolio.total_stocks_value, precision: 0 ) %></td>
			<td class='text-right'><%= number_to_currency( @portfolio.total_stocks_change_value, precision: 0 ) %></td>
		</tr>
		<tr><td colspan=3><td>
		</tr>
		<tr>
			<td colspan=2 class='text-right'>Cash:</td>
			<td class='text-right'><%= number_to_currency( @portfolio.cash) %>
			<td></td>
		</tr>	
		<tr><td colspan=3><td>
		<tr>
			<td colspan=2 class='text-right'>Total Value:</td>
			<td class='text-right'><%= number_to_currency( @portfolio.cash + @portfolio.total_stocks_value + @portfolio.total_options_value) %>
			<td></td>
		</tr>	
		</tbody>
	</table>
</div>

