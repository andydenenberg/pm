https://github.com/heroku/heroku-fork

# install fork
heroku plugins:install heroku-fork

# create the new app
heroku fork --from her17  --to heraga  

# add the git repo  
git remote add forked git@heroku.com:heraga.git

# monitor the apps
heroku logs --tail --app heraga
heroku logs --tail --app her17

# run console for apps
heroku run console --app heraga
heroku run console --app her17

# get info on apps
heroku info heraga
heroku info heraga

# push new code to apps
git push forked master
git push heroku master

