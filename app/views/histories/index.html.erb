<p id="notice"><%= notice %></p>

<h1>Histories</h1>

<table>
  <thead>
    <tr>
      <th>Cash</th>
      <th>Stocks</th>
      <th>Stocks count</th>
      <th>Options</th>
      <th>Options count</th>
      <th>Total</th>
      <th>Snapshot date</th>
      <th>Portfolio</th>
      <th>Daily dividend</th>
      <th>Daily dividend date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.cash %></td>
        <td><%= history.stocks %></td>
        <td><%= history.stocks_count %></td>
        <td><%= history.options %></td>
        <td><%= history.options_count %></td>
        <td><%= history.total %></td>
        <td><%= history.snapshot_date %></td>
        <td><%= history.portfolio_id %></td>
        <td><%= history.daily_dividend %></td>
        <td><%= history.daily_dividend_date %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

